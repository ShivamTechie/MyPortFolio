# Admin Panel .htaccess
# URL Rewriting and Security

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /admin/
    
    # Don't rewrite if file or directory exists
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Don't rewrite index.php itself
    RewriteCond %{REQUEST_URI} !^/admin/index\.php
    # Redirect to index.php, preserve POST data with [P,QSA]
    RewriteRule ^(.*)$ index.php?page=$1 [QSA,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
</IfModule>

# Disable directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
